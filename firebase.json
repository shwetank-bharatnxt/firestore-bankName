{
    "emulators": {
        "firestore": {
            "port": 8080,
            "import": "./firestore-backup"
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "region": "asia-south1"
        }
    ]
}
